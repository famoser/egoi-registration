{% block edit_participant_personal_data_widget %}
    {% import _self as own_macros %}

    <div class="row">
        <div class="col">
            {{ form_row(form.givenName) }}
        </div>
        <div class="col">
            {{ form_row(form.familyName) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.birthday) }}
        </div>
        <div class="col">
            {{ form_row(form.gender) }}
        </div>
    </div>
    {% if form.email is defined and form.phone is defined %}
        <div class="row">
            <div class="col">
                {{ form_row(form.email) }}
            </div>
            <div class="col">
                {{ form_row(form.phone) }}
            </div>
        </div>
    {% endif %}
    <hr/>
    <div class="row">
        <div class="col">
            {{ form_row(form.portraitFile) }}
        </div>
        <div class="col">
            {{ form_row(form.nameOnDocuments) }}
        </div>
        {% if "portrait_url" in form.portraitFile.vars.attr|keys %}
            <div class="col-12">
                <img class="w-50" src="{{ form.portraitFile.vars.attr["portrait_url"] }}" alt="portrait">
            </div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-4">
            {{ form_row(form.shirtSize) }}
        </div>
        <div class="col-2">
            {{ form_row(form.shirtFit) }}
        </div>
        <div class="col-6">
            {{ form_row(form.sockSize) }}
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col">
            {{ form_row(form.papersFile) }}
        </div>
        <div class="col">
        </div>
        {% if "papers_url" in form.papersFile.vars.attr|keys %}
            <div class="col-12">
                <img class="w-50" src="{{ form.papersFile.vars.attr["papers_url"] }}" alt="portrait">
            </div>
        {% endif %}
    </div>
    <hr/>
    <div class="row">
        <div class="col">
            {{ form_row(form.consentFile) }}
            <p>
                <a class="btn btn-info" download href="{{ env_consent_file_template_path }}">
                    {{ "new.consent_file_template"|trans({}, "participant") }}
                </a>
            </p>
        </div>
        <div class="col">
        </div>
        {% if "consent_url" in form.consentFile.vars.attr|keys %}
            <div class="col-12">
                <a class="btn btn-outline-secondary" href="{{ form.consentFile.vars.attr["consent_url"] }}">
                    {{ "new.download"|trans({}, "participant") }}
                </a>
            </div>
        {% endif %}
    </div>
    <hr/>

    {{ own_macros.form_row_buttons(form) }}
{% endblock %}

