{% macro form_row_buttons(form) %}
    <div class="row mt-4">
        <div class="col">
            {% if form.submit is defined %}
                {% if form.submit_and_lock is defined or form.submit_and_unlock is defined %}
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-outline-primary'}}) }}
                {% else %}
                    {{ form_widget(form.submit) }}
                {% endif %}
            {% endif %}
            {% if form.submit_and_lock is defined %}
                {{ form_widget(form.submit_and_lock, {'attr': {'class': 'btn btn-success'}}) }}
            {% endif %}
            {% if form.submit_and_unlock is defined %}
                {{ form_widget(form.submit_and_unlock, {'attr': {'class': 'btn btn-warning'}}) }}
            {% endif %}
        </div>
    </div>
{% endmacro %}

